# Server Configuration
PORT=4000
NODE_ENV=development
LOG_LEVEL=info

# A2A Protocol Configuration
# Public base URL for the agent (optional, defaults to http://localhost:4000)
A2A_BASE_URL=http://localhost:4000

# Kaiban Platform Configuration
KAIBAN_TENANT=your-tenant
KAIBAN_ENVIRONMENT=dev
KAIBAN_API_TOKEN=your-kaiban-api-token
KAIBAN_API_URL=https://your-tenant.kaiban.io/api

# Kaiban MCP (replaces SDK for card/column/activities)
# MCP URL (optional: derived from KAIBAN_TENANT + KAIBAN_ENVIRONMENT if not set)
KAIBAN_MCP_URL=https://your-tenant.kaiban.io/mcps/kaiban/mcp
# Environment: dev | staging | prod (optional, default: prod)
KAIBAN_ENVIRONMENT=prod

# Group Booking Quote Agent Configuration
# Unique identifier for Group Booking Quote agent in Kaiban (required)
KAIBAN_AGENT_ID=your-group-booking-quote-agent-id
# Optional: specific env var for this agent (falls back to KAIBAN_AGENT_ID)
KAIBAN_GROUP_BOOKING_QUOTE_AGENT_ID=your-group-booking-quote-agent-id

# OpenAI API key for KaibanJS (required)
OPENAI_API_KEY=your-openai-api-key
